:root {
    --dark--blue: #192959;
    --hue-blue: #3b62d9;
    --tint--blue: #dce4f2;
    --shade--blue: #1d3273;
    --tone--blue: #6382bf;
}

.bg-light-gray {
    background-color: #f9f9f9;
}
.bg-dark-gray {
    background-color: #333333;
}
.text-light-gray {
    color: #f9f9f9;
}
.rounded-circle {
    border-radius: 50%;
}
.project-card {
    transition: all 0.2s ease-in-out;
}
.project-card:hover {
    transform: scale(1.05);
}

.navbar .navbar-brand {
    color: var(--tint--blue);
}